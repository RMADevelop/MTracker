    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@drawable/gradient_red"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/AppTheme.PopupOverlay">

    </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/category_fragment_transaction_insert"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:src="@mipmap/ic_add"/>

        <TextView
            android:id="@+id/text_category"
            android:textSize="36sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:hint="Category"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/container_value_transaction_insert">

        <ImageView
            style="@style/imagesInRecycler"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:src="@mipmap/ic_transaction_money"/>

        <EditText
            android:id="@+id/value_fragment_transaction_insert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:hint="Value"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            style="@style/imagesInRecycler"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:src="@mipmap/ic_transaction_description"/>

        <EditText
            android:id="@+id/description_fragment_transaction_insert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:hint="Description"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            style="@style/imagesInRecycler"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:src="@mipmap/ic_transaction_date"/>

        <EditText
            android:id="@+id/date_fragment_transaction_insert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:hint="Date"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Оповещение"/>

    </LinearLayout>


</LinearLayout>